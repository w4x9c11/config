{
    // ==========================
    // C/C++ 插件相关设置
    // ==========================
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.formatting": "disabled",
    "C_Cpp.enhancedColorization": "disabled",
    "C_Cpp.codeFolding": "disabled",
    "C_Cpp.navigation": "disabled",
    // 优化性能
    "C_Cpp.loggingLevel": "None",
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "files.associations": {
        "*.c": "c",
        "*.h": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp"
    },
    "window.restoreFullscreen": false,
    "window.restoreWindows": "none",
    "editor.cursorBlinking": "blink",
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.cursorStyle": "block",
    // "[cpp]": { "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd" },
    // ==========================
    // Clangd 配置
    // ==========================
    "clangd.path": "E:/deve/clangd/bin/clangd.exe",
    "clangd.checkUpdates": false,
    "clangd.onConfigChanged": "restart",
    "clangd.serverCompletionRanking": false,
    "clangd.restartAfterCrash": true,
    "clangd.fallbackFlags": [
        "-std=c++20"
    ],
    "clangd.arguments": [
        "--background-index", // 背景索引
        "--completion-style=bundled", // 自动补全风格
        "--header-insertion=never", // 不自动插入头文件
        "--compile-commands-dir=${workspaceFolder}/build", // cmake 或 xmake 构建目录
        "--pch-storage=disk", // 预编译头存储到磁盘，减少内存占用
        "--j=8", // 使用 4 个线程，可根据 CPU 调整
        "--limit-results=20", // 自动补全结果限制
        "--limit-references=20", // 查找引用限制
        // "--resource-dir=E:/deve/clangd/lib/clang/20/include", // Clang 内置头文件路径
        "--log=error", // 只输出错误日志
        "--enable-config", // 允许 clangd 配置文件
        "--completion-parse=auto", // 智能补全解析
        "--ranking-model=heuristics", // 补全排序启发式
        "--header-insertion-decorators=false",
        "--function-arg-placeholders=false",
        "--all-scopes-completion=false",
        "--pretty=false",
        // "--clang-tidy" // 启用 clang-tidy
    ],
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.fontFamily": "Noto Sans Mono",
    "chat.editor.fontFamily": "Noto Sans Mono",
    "chat.fontFamily": "Noto Sans Mono",
    "editor.codeLensFontFamily": "Noto Sans Mono",
    "editor.inlayHints.fontFamily": "Noto Sans Mono",
    "editor.inlineSuggest.fontFamily": "Noto Sans Mono",
    "debug.console.fontFamily": "Noto Sans Mono",
    "scm.inputFontFamily": "Noto Sans Mono",
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "debug.console.fontSize": 16,
    "editor.renderWhitespace": "none",
    "editor.mouseWheelScrollSensitivity": 5,
    "editor.wordWrap": "on",
    "editor.semanticHighlighting.enabled": false,
    // ==========================
    // 编辑器功能设置
    // ==========================
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "breadcrumbs.enabled": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.wordBasedSuggestions": "off",
    "editor.suggestOnTriggerCharacters": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.parameterHints.enabled": false,
    "editor.guides.indentation": false,
    "editor.guides.bracketPairs": false,
    "editor.stickyScroll.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.links": false,
    "editor.smoothScrolling": true,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.accessibilitySupport": "off",
    "editor.renderControlCharacters": false,
    "editor.find.history": "never",
    "editor.lineNumbers": "on",
    "editor.largeFileOptimizations": true,
    // ==========================
    // 终端设置
    // ==========================
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.smoothScrolling": false,
    // "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.profiles.windows": {
        "Command Prompt": {
            "path": "C:\\Windows\\System32\\cmd.exe",
            "args": [
                "/k",
                "chcp 65001"
            ]
        }
    },
    // ==========================
    // 文件处理
    // ==========================
    "files.encoding": "utf8",
    "files.candidateGuessEncodings": [
        "utf8"
        // "gb2312"
    ],
    "files.participants.timeout": 5000,
    "files.hotExit": "off",
    "files.refactoring.autoSave": false,
    "files.restoreUndoStack": false,
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.git/**": true,
        "**/build/**": true,
        "**/out/**": true,
        "**/dist/**": true,
        "**/.cache/**": true
    },
    "files.exclude": {
        "**/.hg": true,
        "**/.svn": true
    },
    // ==========================
    // 工作区设置
    // ==========================
    "cmake.generator": "Ninja",
    "cmake.options.statusBarVisibility": "visible",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
    },
    "workbench.enableExperiments": false,
    "workbench.editor.limit.value": 5,
    "workbench.editor.restoreViewState": false,
    "workbench.localHistory.enabled": false,
    "workbench.editorAssociations": {
        "*.cpp": "default",
        "*.h": "default"
    },
    "workbench.enableHotExit": false,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.limit.enabled": false,
    "workbench.reduceMotion": "on",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.cloudChanges.autoResume": "off",
    "workbench.commandPalette.history": 0,
    "workbench.view.showQuietly": {
        "workbench.panel.output": true
    },
    "workbench.tips.enabled": false,
    "workbench.list.smoothScrolling": false,
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.tree.indent": 16,
    // ==========================
    // 搜索设置
    // ==========================
    "search.maxResults": 200,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true
    },
    "search.followSymlinks": false,
    "search.searchOnType": false,
    // ==========================
    // 性能和更新相关
    // ==========================
    "telemetry.telemetryLevel": "off",
    "update.mode": "start",
    "update.showReleaseNotes": false,
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    // ==========================
    // 文件资源管理器优化
    // ==========================
    "explorer.compactFolders": false,
    "explorer.decorations.colors": false,
    // ==========================
    // Git 和源码管理
    // ==========================
    "git.autorefresh": false,
    "git.decorations.enabled": false,
    "scm.diffDecorations": "none",
    // ==========================
    // JavaScript / TypeScript
    // ==========================
    "typescript.disableAutomaticTypeAcquisition": true,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "javascript.suggest.autoImports": false,
    "typescript.suggest.autoImports": false,
    "javascript.suggest.enabled": false,
    "accessibility.signalOptions.volume": 100,
    "accessibility.dimUnfocused.opacity": 0.5,
    "accessibility.signals.lineHasError": {
        "sound": "on"
    },
    "accessibility.signals.chatResponseReceived": {
        "sound": "on"
    },
    "accessibility.signals.clear": {
        "sound": "on"
    },
    // ==========================
    // 调试
    // ==========================
    "debug.allowBreakpointsEverywhere": true,
    // ==========================
    // 其他
    // ==========================
    "notebook.cellFailureDiagnostics": false,
    // ==========================
    // GitHub Copilot
    // ==========================
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "cmake": false
    },
    "editor.inlayHints.enabled": "off",
    "editor.minimap.enabled": false,
    "cmake.showConfigureWithDebuggerNotification": false,
    "window.commandCenter": false,
    "window.menuStyle": "native",
    "security.workspace.trust.untrustedFiles": "open",
    "window.menuBarVisibility": "toggle",
    "explorer.autoOpenDroppedFile": false,
    "editor.wrappingIndent": "none",
    "qt-core.qtInstallationRoot": "C:\\Qt",
    "qt-core.defaultProjectDirectory": "E:\\code",
    "cmake.cmakePath": "cmake.exe",
    "git.enableCommitSigning": true,
    "telemetry.editStats.enabled": false,
    "telemetry.feedback.enabled": false,
    "settingsSync.keybindingsPerPlatform": false,
    "editor.tabSize": 2,
}
